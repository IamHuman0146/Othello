<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Base Theme -->
    <style name="Theme.OthelloDarren" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="board_background">@color/board_background_green</item>
        <item name="tile_black">@color/tile_black_green</item>
        <item name="tile_white">@color/tile_white_green</item>
        <item name="tile_border">@color/tile_border</item>
        <item name="panel_background">@color/player_panel_green</item>
        <item name="text_color">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- ✅ Green Theme -->
    <style name="Theme.OthelloDarren.Green" parent="Theme.OthelloDarren">
        <item name="board_background">#3D7C4A</item>
        <item name="tile_black">@color/tile_black_green</item>
        <item name="tile_white">@color/tile_white_green</item>
        <item name="tile_border">#E8C7A4</item>
        <item name="panel_background">#55AC55</item>
        <item name="text_color">@android:color/white</item>
    </style>

    <!-- ✅ Blue-Gray Theme -->
    <style name="Theme.OthelloDarren.BlueGray" parent="Theme.OthelloDarren">
        <item name="board_background">@color/board_background_blue_gray</item>
        <item name="tile_black">@color/tile_black_blue_gray</item>
        <item name="tile_white">@color/tile_white_blue_gray</item>
        <item name="tile_border">#00474D</item>
        <item name="panel_background">@color/player_panel_blue_gray</item>
        <item name="text_color">@android:color/white</item>
    </style>

    <!-- ✅ Dark Theme -->
    <style name="Theme.OthelloDarren.Dark" parent="Theme.OthelloDarren">
        <item name="board_background">#222222</item>
        <item name="tile_black">@color/tile_black_dark</item>
        <item name="tile_white">@color/tile_white_dark</item>
        <item name="tile_border">#41004D</item>
        <item name="panel_background">@color/player_panel_dark</item>
        <item name="text_color">@android:color/white</item>
    </style>

    <!-- ✅ Earth Theme -->
    <style name="Theme.OthelloDarren.Earth" parent="Theme.OthelloDarren">
        <item name="board_background">@color/board_background_earth</item>
        <item name="tile_black">#000000</item>
        <item name="tile_white">#FFFFFF</item>
        <item name="tile_border">#FFCEA3</item>
        <item name="panel_background">@color/player_panel_earth</item>
        <item name="text_color">@android:color/white</item>
    </style>
    <!-- ✅ Theme Button Style -->
    <style name="ThemeButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/panel_background</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
